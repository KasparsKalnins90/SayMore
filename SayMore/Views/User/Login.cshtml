@model SayMore.Models.LoginModel
@{
    ViewBag.Title = "Login";
}
<h2>Pieslēgties</h2>

@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary()
    <form class="form-inline">

        <div class="form-group">

            @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

        </div>

        <button type="submit" class="btn btn-default">Pieslēgties</button>
    </form>

}
